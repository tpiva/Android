<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_border"
    android:padding="@dimen/widget_margin">

    <ImageView
        android:id="@+id/appwidget_image_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/appwidget_text"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_playlist_add_black_48dp" />

    <LinearLayout
        android:id="@+id/ln_widget_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/appwidget_text"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/appwidget_recipe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/widget_text_title"
            android:textStyle="bold|italic"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/appwidget_image_expandable"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_launch_black_48dp"
            android:visibility="gone"/>
    </LinearLayout>


    <TextView
        android:id="@+id/appwidget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="@string/appwidget_text"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/widget_text_size"
        android:textStyle="bold|italic" />

</RelativeLayout>