<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ln_ingredients"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_mark"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/recipe_details_mark_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/recipe_details_ingredient_mark_end"
        android:layout_marginLeft="@dimen/general_margin"
        android:layout_marginRight="@dimen/recipe_details_ingredient_mark_end"
        android:layout_marginStart="@dimen/general_margin"
        app:srcCompat="@drawable/ic_keyboard_arrow_right_white_18dp" />


    <TextView
        android:id="@+id/text_ingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_mark"
        android:layout_alignTop="@id/img_mark"
        android:layout_toEndOf="@id/img_mark"
        android:layout_toRightOf="@id/img_mark"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="start|left|center"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/recipe_details_text_color"
        tools:text="2 cup sugar" />
</RelativeLayout>